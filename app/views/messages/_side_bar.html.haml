.side_bar
  .side_bar__side-header
    .side-box
      %p.side-box__user-name
        = current_user.name
      %ul.side-box__menu
        %li.box-menu
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
      
  .side_bar__group-list
    - current_user.groups.each do |group|
      %ul.group-message
        = link_to group_messages_path(group) do
          %li.group-name 
            = group.name
          %li.new-message
            = group.show_last_message