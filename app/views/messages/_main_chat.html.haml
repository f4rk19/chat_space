.main_chat
  .main_chat__main-header
    .header-group
      .header-group__group-name
        = @group.name
      %ul.header-group__member-list
        Member : 
        %li.header-group__member
          - @group.users.each do |user|
            = user.name
    =link_to edit_group_path(@group), class: "group-info__edit" do
      ="Edit"
  
  .main_chat__message-list
    = render @messages
  
  .main_chat__message-form
    = form_with model: [@group, @message], html: {class: "input-box"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: "Type a message"
        = f.label :image, class: 'input-box__image' do
          =icon('fas', 'image')
          =f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn' 